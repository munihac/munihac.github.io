{
  "name": "bootstrap-customized",
  "version": "1.0.0",
  "private": true,
  "description": "Customizing the color scheme for MuniHac",
  "scripts": {
    "build": "npm run css",
    "css-compile": "sass --load-path=node_modules --style=expanded --source-map --embed-sources --precision 6 styles.scss:dist/styles.css",
    "css-lint": "stylelint ./styles.scss",
    "css-prefix": "postcss --replace dist/styles.css --use autoprefixer --map",
    "copy-assets": "cp -r node_modules/bootstrap-icons/font/* dist/ && cp node_modules/bootstrap/dist/js/bootstrap.min.js dist/ && cp custom.css dist/",
    "css": "npm-run-all css-compile css-prefix copy-assets",
    "test": "npm run css-lint && npm run css"
  },
  "dependencies": {
    "bootstrap": "5.1.3",
    "bootstrap-icons": "^1.11.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.33",
    "postcss-cli": "^8.3.1",
    "purgecss": "^5.0.0",
    "sass": "^1.78.0",
    "stylelint": "^16.2.1",
    "stylelint-config-twbs-bootstrap": "^14.0.0"
  },
  "engines": {
    "node": ">=18.0.0 <23.0.0"
  }
}
